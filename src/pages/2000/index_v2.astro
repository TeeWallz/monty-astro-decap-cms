---
import Layout from "@/layouts/Layout_2000.astro";
import DancingText from "@/components/2000/DancingText.astro";
import { getNewestChump } from "@/utils/chump_calculations";
const newestChump = await getNewestChump();
---
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>2000</title>
    <style>
      @font-face {
        font-family: 'ComicNeueSansID';
        src: url('/css/2000/fonts/ComicNeueSansID.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
      }

      html {
        image-rendering: crisp-edges;
      }

      table {
        /* border-collapse: collapse; */
      }

      body {
        margin: 5px;
      }
      
      .page_width {
        width: 615px;
        max-width: 100%;
      }
      .background-color {
        background-color: #0080ff;
      }

      .header_title {
        background-color: #0080ff;
        color: #e9f100;
        font-size: 20px;
        font-weight: bold;
        /* border-top: 3px solid #e9f100; */
      }

      .header_title_inner {
        width: 100%;
      }

      .header_title_text {
        /* font-size: 0.6em; */
      }

      .site-table-header {
        border-radius: 6px 6px 0 0;
        /* border-collapse: collapse;  */
        border: 2px solid #605f83;
        /* border-collapse: collapse; */
        /* max-width: fit-content; */
        margin-bottom: 5px;
      }

      .site-table-header td {
        padding: 2px;
        text-align: center;
        font-weight: bold;
        color: #e9f100;
        cursor: pointer;
      }

      .header-links {
        /* border: 1px solid #e9f100; */
        border-bottom: 1px solid #605f83;
      }

      .site-table-header .header-links td {
        font-family: 'ComicNeueSansID';
      }

      .site-table-header td div {
        /* background-color: #605f83; */
        /* border-style: double; */
        /* border-style: ridge; */
        padding: 0px 3px;
        /* border-color: #605f83; */
        box-shadow: inset 0.2em 0.2em 0.2em 0 rgba(255,255,255,0.5), inset -0.2em -0.2em 0.2em 0 rgba(0,0,0,0.5);
      }
      
      /* first site-table-header td div */
      .site-table-header td:first-child div {
        border-radius: 6px 0 0 0;
      }

      /* last site-table-header td div */
      .site-table-header td:last-child div{
        border-radius: 0 6px 0 0;
      }

      .site-table-header td div:hover {
        background-color: #605f83;
      }

      .side_panel_outer {
        width: 20%;
        background-color: #f0f0f0;
        vertical-align: top;
      }

      .main-content {
        /* border-collapse: collapse; */
        table-layout: fixed;
      }

      .center_area {
        background-image: url("http://cs.gettysburg.edu/~duncjo01/archive/patterns/angelfire/56.jpg");
      }

      .left_side_panel_outer {
      }

      .right_side_panel_outer {
      }
      .ads_table {
        height: 100%;
      }
      .ads_table td{
        padding: 5px;
        border: 1px solid black;
      }
      .ads_table img {
        max-width: 100%;
        margin: auto;
        display: block;
      }
      .days_ago_text {
        width: 100%;
      }
      .days_ago_text img {
        max-width: 50%;
        margin: auto;
        display: block;
      }
      .footer_88_31 {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 0;
      }
      .footer_88_31 img{
        max-width: 100%;
        margin: auto;
        display: block;
      }
      .footer_ads {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 0;   
      }
      .footer_ads img{
        margin: 0;
        display: inline-block;
      }
      .chump_image{
        max-width: 100%;
        margin: auto;
        display: block;
        border: 2px solid black;
      }
      .chump_date {
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
      }

    </style>
  </head>
  <body>
    <!-- header table title -->
    <table class="site-table-header page_width background-color" cellspacing="0" cellpadding="0">
      <tr class="header-links">
        <td>
          <div>
            Home
          </div>
        </td>
        <td>
          <div>
            History
          </div>
        </td>
        <td>
          <div>
            About
          </div>
        </td>
        <td>
          <div>
            Contact
          </div>
        </td>
        <td>
          <div>
            Guestbook
          </div>
        </td>
      </tr>
      <tr class="header_title">
        <td colspan="5">
          <table class="header_title_inner" cellspacing="0" cellpadding="0">
            <tr>
              <td>
                <img src="/images/general/pissed.gif"/>
              </td>
              <td class="header_title_text">
                How many days since the Montague Street Bridge has been hit?
              </td>
              <td>
                <img src="/images/general/banana.gif"/>
              </td>
              <td>
                <img src="/images/general/banana.gif"/>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
    
    <table border="1" class="page_width main-content" cellspacing="0" cellpadding="0">
      <tr>
        <td class="left_side_panel_outer side_panel_outer">
          <table class="ads_table" cellspacing="0" cellpadding="0">
            <tr><td><img src="/images/general/about-com.gif"/></td></tr>
            <tr><td><img src="/images/general/ngage_advert.gif"/></td><tr/>
            <tr><td><img src="/images/general/advert_chinchilla.gif"/></td><tr/>
            <tr><td><img src="/images/general/advert3.gif"/></td><tr/>
            <tr>
              <td>
                <a href="http://myatari.net/">
                  <img src="/images/general/advert_2.gif"/>
                </a>
              </td>
            <tr/>
          </table>
        </td>
        <td class="center_area" style="padding: 5px;">
          <div class="days_container">
            <DancingText text={newestChump.data.streak.toString()} /> 
            <div class="days_ago_text">
              <img src="/images/general/days_ago_2.png"/>
            </div>
            <div class="chump_date">
              <div>
                on {newestChump.data.localisedDate}
              </div>
              <div>
                <img src="/images/general/calendar_guy_january_lg_clr.gif" style="width:60px;"/>
              </div> 
            </span>
          </div>
          <div>
            <p>
              <img class="chump_image" src={newestChump.data.image} alt="newest chump"/>
            </p>
          </div>
        </td>
        <td class="right_side_panel_outer side_panel_outer">
          <table class="">
            <tr>
              <td>
                <div class="footer_88_31">
                  <img src="/images/general/88tgb-button1.gif"/>
                  <img src="/images/general/adv_rar2.gif"/>
                  <img src="/images/general/angelfire.gif"/>
                  <img src="/images/general/aniquake.gif"/>
                  <img src="/images/general/anybrowser2.gif"/>
                  <img src="/images/general/b3.jpg"/>
                  <img src="/images/general/b9.gif"/>
                  <img src="/images/general/b11.gif"/>
                  <img src="/images/general/d15.gif"/>
                  <img src="/images/general/e7.gif"/>
                  <img src="/images/general/e38.gif"/>
                  <img src="/images/general/netscape.gif"/>
                  <img src="/images/general/quicktime.gif"/>
                  <img src="/images/general/win98_89.gif"/>
                </div>
              </td>
            </tr>
          </table>
        </td>
      </tr>
      <tr>
        <td colspan="3">
          <div class="footer_ads">
            <img src="/images/general/monkeyadvert.gif"/>
            <img src="/images/general/MPLA_advert.gif"/>
          </div>
        </td>
      </tr>
  </table>

  </body>
</html>