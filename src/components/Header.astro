---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/presentation";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between h-7">
  <nav role="navigation" style="height: 100%;">
    <ul role="list" class="flex flex-row gap-2 items-center h-full" style="justify-content: center;">
      <li style="height: 100%;">
        <a
          href="/"
          class:list={{
            ["hover:text-amber-500"]: true,
            ["text-black"]: pathname === "/",
          }}>
            <img src="/images/home.gif" alt="home" style="height: 100%;"/>
          </a>
      </li>
      <li>/</li>
      <li style="height: 100%;">
        <a
          href="/history"
          class:list={{
            ["hover:text-amber-500"]: true,
            ["text-black"]: pathname === "/history",
          }}>
            <img src="/images/fzghistorygif.gif" alt="history" style="height: 100%;"/>
          </a>
      </li>
      <li>/</li>
      <li>
        <a
          href="/"
          class:list={{
            ["hover:text-amber-500"]: true,
            ["text-black"]: pathname === "/",
          }}>Stats</a
        >
      </li>
    </ul>
  </nav>
</header>
