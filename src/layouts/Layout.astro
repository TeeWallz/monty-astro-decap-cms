---
import Header from "../components/Header.astro";
import BlurCircle from "@/components/shared/BlurCircle.astro";
import theme from "@/data/theme";
import SEOTags from "@/components/seo/SEOTags.astro";

import "@fontsource/open-sans";
import "@/styles/monty.css";
import "@/styles/tailwind.css";
import "@/styles/post.css";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <SEOTags title={title} />

  <body
    class="mx-auto flex min-h-screen max-w-xl flex-col px-5 py-2 text-sm gap-3 md:py-8 bg-yellow-50 background  mr-auto ml-auto"
  >
  <div class="header_image_container">
    <img src="images/monty_header_transparent.png" alt="monty" class="header_image" />
  </div>

    <div class="main_container flex flex-col gap-2 py-2 px-2 max-w-xl mx-auto">
      <slot />
      <Header />
      <div class="center-everything" style="flex-direction: column">
        <a href='https://www.free-website-hit-counter.com'>
          <img src='https://www.free-website-hit-counter.com/zc.php?d=9&id=2412&s=2' border='0' alt='Free Website Hit Counter'>
        </a>
        <br />
        <br />
        <small>
          <a href='https://www.free-website-hit-counter.com' title="Free Website Hit Counter">
            Free website hit counter
          </a>
        </small>
      </div>
    </div>

    <style is:global>
      html {
        font-family: "Open Sans";
      }
    </style>
  </body>
</html>
